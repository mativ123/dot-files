{
"suggest.noselect": {
      "type": "boolean",
      "description": "Not make vim select first item on completion start",
      "default": false
    },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "h"],
      "rootPatterns": [".ccls-root", "build/compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "compilationDatabaseDirectory": "build",
        "clang": { 
          "extraArgs": [ "-std=c++20" ] 
        }
      }
    },
    "rust": {
    "command": "rust-analyzer",
    "filetypes": ["rust"],
    "rootPatterns": ["Cargo.toml"]
    },
  }
}

  "coc.source.OmniSharp.enable" : true,
  "coc.source.OmniSharp.triggerCharacters": ".",

  "initializationOptions": {
  // ...
  // This will re-index the file on buffer change which is definitely a performance hit. See if it works for you
  "index": {
    "onChange": true
  },
  // This is mandatory!
  }
}

