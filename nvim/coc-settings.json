{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "h"],
            "rootPatterns": [".ccls-root", "build/compile_commands.json"],
            "initializationOptions": {
                    "cache": {
                    "directory": ".ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                },
                "compilationDatabaseDirectory": "build",
                "clang": { 
                    "extraArgs": [ "-std=c++20" ] 
                }
            }
        },
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"],
            // Settings are optional, here are some example values
            "settings": {
                "haskell": {
                    "checkParents": "CheckOnSave",
                    "checkProject": true,
                    "maxCompletions": 40,
                    "formattingProvider": "ormolu",
                    "plugin": {
                        "stan": { "globalOn": true }
                    }
                }
            }
        },
        "arduino":{ 
            "command":"./lsp/arduino-language-server/arduino-language-server",
            "rootPatterns":["*.ino"],
            "filetypes":["arduino"],
            "args":["-cli", "/path/to/arduino-cli", "-clangd", "/path/to/clangd", "-cli-config", "/path/to/arduino-cli.yaml"]
        },
        // "csharp-ls": {
        //     "command": "csharp-ls",
        //     "filetypes": ["cs"],
        //     "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        // },
    },

    "suggest.noselect": true,
}
